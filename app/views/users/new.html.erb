<h1>Sign Up</h1>

<%= form_for @user, :url => {:action => "create"} do |f| %>
<div class="field">
  <%= f.label :username %><br />
  <%= f.text_field :username %>
</div>
<div class="field">
  <%= f.label :firstname %><br />
  <%= f.text_field :firstname %>
</div>
<div class="field">
  <%= f.label :lastname %><br />
  <%= f.text_field :lastname %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :password %><br />
  <%= password_field_tag :password %>
</div>
<div class="field">
  <%= radio_button_tag(:privacy, "0", true) %>
  <%= label_tag(:privacy, "Public Tweets") %><br />
  <%= radio_button_tag(:privacy, "1") %>
  <%= label_tag(:privacy, "Private Tweets") %>
</div>
<div class="field">
  <%= f.label :webpage %><br />
  <%= f.text_field :webpage %>
</div>
<div class="field">
  <%= time_zone_select :user, :time_zone %>
</div>
<div class="field">
  <%= f.label :bio %><br />
  <%= text_area_tag :bio, "", :size => "24x6" %>
</div>
<div class="field">
  <%= f.label :location %><br />
  <%= f.text_field :location %>
</div>
<div class="field">
  <%= f.label :language %><br />
  <%= f.text_field :language %>
</div>

<div class="actions">
  <%= f.submit "Sign up" %>
</div>

<% end %>
