<!DOCTYPE html>
<html>
  <head>
    <title>Quitter: Twitter for Quitters</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <%= image_tag("twitter_bird_dead.jpg") %>
    <% if current_user.nil? %>
    <div id="login">
      <%= link_to "Login", :controller =>"sessions", :action => "new", :id => @session %>
    </div>
    <div id="register">
      <%= link_to "Register", :controller =>"users",:action => "new", :id => @user %>
    </div>
    <% end %>
    <% if !current_user.nil? %>
    <div id="logged_in_user">
      Logged in as
      <%= current_user.username %>
    </div>
    <div id="logout">
      <%= link_to "Logout", :controller =>"sessions",:action => "destroy", :id => @session %>
    </div>
    <div id="home">
      <%= link_to "Home", user_tweets_url(:username => current_user.username) %>
    </div>
    <div id="search_page">
      <%= link_to "Search", search_url(:string => " ") %>
    </div>
    <% end %>
    
    <%= yield %>
    
  </body>
</html>
