<h1>New message</h1>

<%= form_for @message do |m| %>
<div class="field">
  <%= m.label :subject %><br />
  <%= m.text_field :subject %>
</div>
<div class="field">
  <%= m.label :body %><br />
  <%= m.text_area :body %>
</div>
<div class="actions">
  <%= m.submit %>
</div>

<% end %>
  
<%= link_to "Back", :back %>

